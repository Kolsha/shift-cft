<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:fillViewport="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/new_task_fields_width"
        android:paddingRight="@dimen/new_task_fields_width"
        android:paddingTop="@dimen/space_normal"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/new_task_activity_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_task_text"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/new_task_input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_task_title"
            android:inputType="text"
            android:textColor="@color/create_task_data_text_color"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/new_task_input_description"
            android:layout_width="match_parent"
            android:layout_weight="15"
            android:hint="@string/new_task_text_description"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:textColor="@color/create_task_data_text_color"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/new_task_create_button"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/new_task_button_margin"
            android:layout_marginTop="@dimen/new_task_button_margin"
            android:background="@color/colorAccent"
            android:text="@string/new_task_button_text"
            android:textColor="@android:color/white" />

    </LinearLayout>
    <ProgressBar
        android:id="@+id/new_task_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
</FrameLayout>
